---
import { skills } from '@cv'
import Section from "../Section.astro";
---

<Section title="Habilidades">
    <ul>
        {skills.map(({ keywords }) => (
            <li>
                <span>{keywords}</span>
            </li>
        ))}
    </ul>
</Section>

<style>
    ul {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    li {
        border-radius: 6px;
        background: #444444;
        color: white;
        font-size: .75rem;
        font-weight: 400;
        padding: 0.2rem 0.6rem;
        transition: all .3s ease;
    }

    li:hover {
        background: #8d8d8d;
    }
</style>