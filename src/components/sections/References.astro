---
import { references } from '@cv';
import Section from '../Section.astro';
import Phone from '@/icons/Phone.astro';
---

<Section title="Referencias">
  <ul>
    {
      references.map(
        ({
          name,
          company,
          position,
          phone
        }) => {
          return (
            <li>
              <article>
                <div class="reference-info">
                  <h3>{name}</h3>
                  <h4>{position}</h4>
                  <span class="company-name">{company}</span>
                  <div class="phone">
                    <Phone />
                    <span>{phone}</span>
                  </div>
                </div>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 24px;
  }

  article {
    padding: 12px;
    border-radius: 8px;
    border: 1px solid #eee;
    transition: all 0.3s ease;
  }

  article:hover {
    border-color: #ddd;
    background-color: #f9f9f9;
  }

  h3 {
    font-weight: 500;
    color: #111;
    margin-bottom: 2px;
  }

  h4 {
    color: #333;
    font-weight: 500;
    font-size: 0.9rem;
    margin-bottom: 2px;
  }

  .company-name {
    color: #555;
    font-size: 0.85rem;
    display: block;
    margin-bottom: 8px;
  }

  .reference-info {
    display: flex;
    flex-direction: column;
  }

  .phone {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #666;
    font-size: 0.85rem;
    margin-top: 4px;
  }

  @media (width <= 700px) {
    ul {
      grid-template-columns: 1fr;
    }
  }

  @media print {
    article {
      border: none;
      padding: 0;
    }
  }
</style>